{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Game Service With Dapr",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "game-service-daprd-debug",
      "program": "${workspaceFolder}/src/Backend/GameService.Api/bin/Debug/net6.0/Scrummy.GameService.Api.dll",
      "cwd": "${workspaceFolder}/src/Backend/GameService.Api",
      "postDebugTask": "daprd-down-game-service"
    },
    {
      "name": "Launch Blazor Client",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "blazor-client-dotnet-build",
      "program": "${workspaceFolder}/src/Frontend/BlazorClient.Host/bin/Debug/net6.0/Scrummy.BlazorClient.Host.dll",
      "cwd": "${workspaceFolder}/src/Frontend/BlazorClient.Host"
    },
    {
      "name": "Launch Blazor Client with WASM Debugging",
      "type": "blazorwasm",
      "request": "launch",
      "preLaunchTask": "blazor-client-dotnet-build",
      "hosted": true,
      "program": "${workspaceFolder}/src/Frontend/BlazorClient.Host/bin/Debug/net6.0/Scrummy.BlazorClient.Host.dll",
      "cwd": "${workspaceFolder}/src/Frontend/BlazorClient",
      "url": "http://localhost:5102"
    },
    {
      "name": "Launch Blazor Client with Watch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "blazor-client-dotnet-watch",
      "program": "${workspaceFolder}/src/Frontend/BlazorClient.Host/bin/Debug/net6.0/Scrummy.BlazorClient.Host.dll",
      "cwd": "${workspaceFolder}/src/Frontend/BlazorClient.Host"
    },
    {
      "name": "Blazor Client Attach",
      "type": "blazorwasm",
      "request": "attach",
      "url": "http://localhost:5102"
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "Launch Scrummy",
      "configurations": [
        "Launch Game Service With Dapr",
        "Launch Blazor Client"
      ]
    },
    {
      "name": "Launch Scrummy with Blazor Client Watch",
      "configurations": [
        "Launch Game Service With Dapr",
        "Launch Blazor Client with Watch"
      ]
    }
  ]
}
