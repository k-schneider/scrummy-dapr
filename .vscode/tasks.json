{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "game-service-dotnet-build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Backend/GameService.Api/GameService.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "game-service-dotnet-watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src/Backend/GameService.Api/GameService.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/src/Backend/GameService.Api"
      }
    },
    {
      "label": "game-service-daprd-debug",
      "type": "daprd",
      "appId": "game-service",
      "appPort": 5101,
      "dependsOn": ["game-service-dotnet-build"]
    },
    {
      "label": "game-service-daprd-down",
      "type": "daprd-down",
      "appId": "game-service"
    },
    {
      "label": "blazor-client-dotnet-build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Frontend/BlazorClient.Host/BlazorClient.Host.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "blazor-client-dotnet-watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src/Frontend/BlazorClient.Host/BlazorClient.Host.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/src/Frontend/BlazorClient.Host"
      }
    }
  ]
}
