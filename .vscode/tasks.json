{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build BlazorClient.Host",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Frontend/BlazorClient.Host/BlazorClient.Host.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Watch BlazorClient.Host",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src/Frontend/BlazorClient.Host/BlazorClient.Host.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "options": { "cwd": "${workspaceFolder}/src/Frontend/BlazorClient.Host" }
    },
    {
      "label": "Build GameService.Api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Backend/GameService.Api/GameService.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Watch GameService.Api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src/Backend/GameService.Api/GameService.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "options": { "cwd": "${workspaceFolder}/src/Backend/GameService.Api" }
    },
    {
      "label": "Build",
      "dependsOn": ["Build BlazorClient.Host", "Build GameService.Api"]
    }
  ]
}
