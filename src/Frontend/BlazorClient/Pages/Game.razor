@page "/room/{roomId}"
@inject HttpClient HttpClient;
@inject NavigationManager NavigationManager

<PageTitle>Scrummy</PageTitle>

<div class="grid place-items-center h-screen">
    <div class="bg-white rounded-lg shadow-xl sm:max-w-lg mx-4">
        <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
            <div class="mt-3 text-center">
                <h3 class="text-xl leading-6 font-medium text-gray-900">
                    Welcome to Scrummy
                </h3>
                <div class="mt-3">
                    <p class="text-gray-500">
                        To enter the room, choose a nickname.
                    </p>
                </div>
                <div class="mt-3">
                    <input type="text" @bind="nickname" name="nickname" id="nickname" maxlength="50" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 block w-full p-2.5" placeholder="Enter your nickname">
                </div>
            </div>
        </div>
        <div class="px-4 py-3 sm:px-6">
            <button type="button" @onclick="OnCreateRoom" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-orange-600 text-base font-medium text-white hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                Create Room
            </button>
        </div>
    </div>
</div>

@code {
    private string nickname = string.Empty;

    [Parameter]
    public string RoomId { get; set; } = null!;

    private async Task OnCreateRoom()
    {
        if (string.IsNullOrWhiteSpace(nickname))
        {
            return;
        }

        var response = await HttpClient.PostAsync("/game-api/lobby/create", null);
        response.EnsureSuccessStatusCode();
        var gameId = await response.Content.ReadAsStringAsync();

        NavigationManager.NavigateTo($"/room/{gameId}");
    }
}
