@page "/room/{gameId}"
@inherits FluxorComponent
@inject IState<LobbyState> LobbyState

<PageTitle>Scrummy</PageTitle>

@if (GameId.Equals("create", StringComparison.OrdinalIgnoreCase))
{
    <CreateRoom />
}
else if (LobbyState.Value.Games.ContainsKey(GameId))
{
    <Game GameId="@GameId" />
}
else
{
    <JoinRoom GameId="@GameId" />
}

@code {
    [Parameter]
    public string GameId { get; set; } = null!;
}
